{
    "arrowParens": "always",
    "bracketSpacing": true,
    "trailingComma": "es5",
    "tabWidth": 4,
    "semi": true,
    "singleQuote": false,
    "endOfLine": "auto",
    "printWidth": 120,
    "plugins": ["@trivago/prettier-plugin-sort-imports"],
    "importOrder": [
        "^@nestjs/(.*)$",
        "^[./]",
        "^@env/(.*)$",
        "^@modules/(.*)$",
        "^@helpers/(.*)$",
        "^@constants/(.*)$",
        "^@decorators/(.*)$",
        "^@enums/(.*)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true,
    "importOrderParserPlugins": ["typescript", "decorators-legacy"]
}
