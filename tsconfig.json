{
  "compilerOptions": {
      "module": "commonjs",
      "strict": true,
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "target": "ES6",
      "sourceMap": true,
      "noErrorTruncation": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
          "@env": ["./src/env"],
          "@modules/*": ["./src/modules/*"],
          "@helpers/*": ["./src/helpers/*"],
          "@decorators/*": ["./src/decorators/*"],
          "@enums/*": ["./src/enums/*"],
          "@constants/*": ["./src/constants/*"]
      },
      "incremental": true,
      "forceConsistentCasingInFileNames": false,
      "lib": ["ES6", "ESNext"],
      "types": ["jest", "node"]
  }
}
